<Button>:
    font_size: 15
    color: .1 ,.5 ,.6 ,1
    size_hint: .2, .1

<FloatLayout>:
    canvas.before:
        Color:
            rgba: .47, .63, .6, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size


        Color:
            rgba: .8, .99, .9, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.width, self.height -85

    Button:
        text: "left"
        pos_hint: {"x": 0, "y": 0}

    Button:
        text: "right"
        pos_hint: {"x": .8, "y": 0}

    Button:
        text:"weakly schedule"
        pos_hint: {"x": .2, "y": 0}
        size_hint: .6, .1

    Button:
        text:"setting"
        pos_hint: {"x": .8, "y": .9}
        size_hint: .2, .1

    Label:
        text: "1"
        font_size: 20
        color: .47, .63, .6, 1
        size_hint: .1, .1
        pos_hint: {"y": .75}
